{
    "name": "@workleap/foundry",
    "version": "0.3.0",
    "description": "Foundry-CLI generator module",
    "license": "Apache-2.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-foundry-cli.git",
        "directory": "packages/foundry"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "bin": "./dist/bin.js",
    "scripts": {
        "dev": "pnpm run build && pnpm run dev:link && pnpm run dev:tsup",
        "dev:link": "pnpm link --global",
        "dev:tsup": "tsup --config tsup.dev.ts",

        "build": "tsup --config tsup.build.ts"
    },
    "dependencies": {
        "commander": "10.0.1",
        "degit": "2.8.4",
        "glob": "10.2.4",
        "npm-check-updates": "16.10.12"
    },
    "devDependencies": {
        "@swc/core": "1.3.58",
        "@swc/helpers": "0.5.1",
        "@swc/jest": "0.2.26",
        "@types/degit": "2.8.3",
        "@types/jest": "29.5.1",
        "@types/node": "18.16.10",
        "@workleap/tsup-configs": "1.0.0",
        "jest": "29.5.0",
        "ts-node": "10.9.1",
        "tsup": "6.7.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
