        "build": "tsup",
        "build:dev": "tsup --sourcemap --watch --ignore-watch tests"
    },
    "dependencies": {
        "commander": "10.0.1",
        "degit": "2.8.4",
        "glob": "10.2.4",
        "npm-check-updates": "16.10.12"
    },
    "devDependencies": {
        "@types/degit": "2.8.3",
        "tsup": "6.7.0"
    }
}
